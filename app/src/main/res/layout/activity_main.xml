<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.hp.creamshop.MainActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/pizza"
            android:fontFamily="serif"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/m_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Please Enter Your Name"
            android:inputType="textCapSentences"
            android:padding="12dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/m_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please Enter Your Address"
            android:padding="12dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/m_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Please Enter Your Phone number"
            android:inputType="phone"
            android:padding="12dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PLACE YOUR ORDER"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/panther1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Pizza Cake"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/vanilla_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Ginger Finger"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/choco_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Chocolate Pizza"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <Button
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="-"
                        android:textSize="25sp"
                        android:onClick="decrement1"/>

                    <TextView
                        android:id="@+id/value1"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20sp"
                        android:freezesText="true"/>

                    <Button
                        android:id="@+id/btn_incrs1"
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="+"
                        android:textSize="25sp"
                        android:onClick="increment1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <Button
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="-"
                        android:textSize="25sp"
                        android:onClick="decrement2"/>

                    <TextView
                        android:id="@+id/value2"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="25dp"
                        android:freezesText="true"/>

                    <Button
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="+"
                        android:textSize="25sp"
                        android:onClick="increment2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <Button
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="-"
                        android:textSize="25sp"
                        android:onClick="decrement3"/>

                    <TextView
                        android:id="@+id/value3"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="25dp"
                        android:freezesText="true"/>

                    <Button
                        android:layout_width="49dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="+"
                        android:textSize="25sp"
                        android:onClick="increment3"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:onClick="con_order"
                android:text="CONFIRM YOUR ORDER" />

            <TextView
                android:id="@+id/confirm_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:freezesText="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:onClick="order"
                android:text="ORDER" />


        </LinearLayout>
    </LinearLayout>


</ScrollView>